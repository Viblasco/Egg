//Mostrar el área y perímetro de un rombo.
Algoritmo areaPerimetroRombo
	Definir diagonal,lado como real;
	Escribir "Ingrese diagonal del rombo";
	Leer diagonal;
	Escribir "Ingrese lado del rombo";
	Leer lado;
	
	Escribir "El area del rombo es: " (diagonal*diagonal)/2;
	Escribir "El perimetro del rombo es: " (4*lado);
	
FinAlgoritmo
